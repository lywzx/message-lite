{
  "name": "message-lite",
  "version": "0.0.1",
  "description": "message lite",
  "scripts": {
    "dev": "node --max_old_space_size=8192 node_modules/rollup/dist/bin/rollup -w -c node_modules/@lywzx/rollup-build-scripts/rollup.config.js --only-entry=minify,cjs",
    "build": "node --max-old-space-size=8192 node_modules/@lywzx/rollup-build-scripts/index.js",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.ts\"",
    "test": "mocha",
    "coverage": "nyc mocha",
    "coverage:watch": "nyc mocha --watch",
    "lint-staged": "lint-staged"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lywzx/message-lite.git"
  },
  "keywords": [
    "message",
    "postmessage",
    "lite"
  ],
  "author": "liuyang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lywzx/message-lite/issues"
  },
  "homepage": "https://github.com/lywzx/message-lite#readme",
  "devDependencies": {
    "@lywzx/rollup-build-scripts": "^0.0.10",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@types/chai": "^4.2.9",
    "@types/mocha": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "rollup": "^2.23.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "~3.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "sinon": "^12.0.1",
    "@types/sinon": "^10.0.6",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~4.0.2",
    "@commitlint/config-conventional": "^15.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "commitlint": "^15.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  }
}
